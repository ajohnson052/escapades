<h2>Ideas</h2>
  <% unless @escapades.where(status: "idea").first %>
    <h3>There are no idea listings at present</h3>
  <% end %>
  <% @escapades.each do |escapade| %>
    <% if escapade.status == "idea" %>
      <div class = "escapade thumbnail">
        <h3><%= link_to escapade.title, escapade_path(escapade) %></h3>
        <%= link_to (image_tag escapade.image), escapade_path(escapade) %>
      </div>
    <% end %>
  <% end %>
