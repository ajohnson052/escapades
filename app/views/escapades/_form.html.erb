<%= @escapade.errors.full_messages.first if @escapade.errors.any? %>

<%= form_for @escapade do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Title" %>
  <%= f.label :start_date %>
  <%= f.date_field :start_date %>
  <%= f.label :end_date %>
  <%= f.date_field :end_date %>
  <%= f.label :image, "Image URL" %>
  <%= f.text_field :image, placeholder: "Image URL" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "description" %>
  <%= f.submit %>
<% end %>
