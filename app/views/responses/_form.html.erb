<%= @response.errors.full_messages.first if @response.errors.any? %>

<%= form_for([@escapade, @response ]) do |f| %>
<%= f.label :comment %>
<%= f.text_field :comment %>
<%= f.label :start_date %>
<%= f.date_field :start_date %>
<%= f.label :end_date %>
<%= f.date_field :end_date %>
<%= f.submit %>
<% end %>
